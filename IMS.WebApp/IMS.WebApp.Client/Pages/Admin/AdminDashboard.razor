@rendermode InteractiveAuto
<MudText Typo="Typo.h4">Dashboard</MudText>

<MudGrid>
    <MudItem xs="12" sm="6" md="3">
        <MudCard Style="background-color:white; height: 300px; display: flex; flex-direction: column; align-items: center;">
            <MudCardContent Style="flex-grow: 1; text-align: center;">
                <svg width="100" height="100" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <rect x="3" y="3" width="8" height="8" fill="#FF6B6B" />
                    <rect x="13" y="3" width="8" height="8" fill="#4ECDC4" />
                    <rect x="3" y="13" width="8" height="8" fill="#4ECDC4" />
                    <rect x="13" y="13" width="8" height="8" fill="#FF6B6B" />
                </svg>
                <MudText Typo="Typo.h6" Class="mt-3">Products</MudText>
                <MudText Typo="Typo.h4">1,236</MudText>
                <MudText Typo="Typo.body2" Color="Color.Success">Increased 75%</MudText>
            </MudCardContent>
            <MudCardActions Class="d-flex justify-center pb-4">
                <MudButton Variant="Variant.Outlined" Color="Color.Primary">VIEW REPORT</MudButton>
            </MudCardActions>
        </MudCard>
    </MudItem>

    <MudItem xs="12" sm="6" md="3">
        <MudCard Style="background-color:white; height: 300px; display: flex; flex-direction: column; align-items: center;">
            <MudCardContent Style="flex-grow: 1; text-align: center;">
                <svg width="100" height="100" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M4 12V20H20V12" stroke="#4ECDC4" stroke-width="2" />
                    <path d="M12 3L12 15M12 15L7 10M12 15L17 10" stroke="#FF6B6B" stroke-width="2" />
                </svg>
                <MudText Typo="Typo.h6" Class="mt-3">Orders</MudText>
                <MudText Typo="Typo.h4">3,612</MudText>
                <MudText Typo="Typo.body2" Color="Color.Success">Increased 75%</MudText>
            </MudCardContent>
            <MudCardActions Class="d-flex justify-center pb-4">
                <MudButton Variant="Variant.Outlined" Color="Color.Primary">VIEW REPORT</MudButton>
            </MudCardActions>
        </MudCard>
    </MudItem>

    <MudItem xs="12" sm="6" md="3">
        <MudCard Style="background-color:white; height: 300px; display: flex; flex-direction: column; align-items: center;">
            <MudCardContent Style="flex-grow: 1; text-align: center;">
                <svg width="100" height="100" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M12 3V21M3 12L21 12" stroke="#4ECDC4" stroke-width="2" />
                    <circle cx="12" cy="12" r="8" stroke="#FF6B6B" stroke-width="2" />
                </svg>
                <MudText Typo="Typo.h6" Class="mt-3">Sales</MudText>
                <MudText Typo="Typo.h4">$35,000</MudText>
                <MudText Typo="Typo.body2" Color="Color.Success">Increased 15%</MudText>
            </MudCardContent>
            <MudCardActions Class="d-flex justify-center pb-4">
                <MudButton Variant="Variant.Outlined" Color="Color.Primary">VIEW REPORT</MudButton>
            </MudCardActions>
        </MudCard>
    </MudItem>

    <MudItem xs="12" sm="6" md="3">
        <MudCard Style="background-color:white; height: 300px; display: flex; flex-direction: column; align-items: center;">
            <MudCardContent Style="flex-grow: 1; text-align: center;">
                <svg width="100" height="100" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <circle cx="12" cy="8" r="5" stroke="#FF6B6B" stroke-width="2" />
                    <path d="M20 21C20 16.5817 16.4183 13 12 13C7.58172 13 4 16.5817 4 21" stroke="#4ECDC4" stroke-width="2" />
                </svg>
                <MudText Typo="Typo.h6" Class="mt-3">Customers</MudText>
                <MudText Typo="Typo.h4">+10</MudText>
                <MudText Typo="Typo.body2" Color="Color.Success">Increased 75%</MudText>
            </MudCardContent>
            <MudCardActions Class="d-flex justify-center pb-4">
                <MudButton Variant="Variant.Outlined" Color="Color.Primary">VIEW REPORT</MudButton>
            </MudCardActions>
        </MudCard>
    </MudItem>
</MudGrid>

<MudGrid Class="mt-4">
    <!-- Scrollable List Card -->
    <MudItem xs="12" md="4">
        <MudCard Style="height: 400px;">
            <MudCardHeader>
                <MudText Typo="Typo.h6">New Products</MudText>
            </MudCardHeader>
            <MudCardContent Style="height: 300px; overflow-y: auto;">
                @foreach (var i in Enumerable.Range(1, 15))
                {
                    <MudPaper Class="pa-4 my-2" Elevation="0">
                        <div class="d-flex gap-4">
                            <MudAvatar Color="Color.Primary">@i</MudAvatar>
                            <div>
                                <MudText Typo="Typo.body1">Product @i</MudText>
                                <MudText Typo="Typo.caption">This is a description for Product @i</MudText>
                            </div>
                        </div>
                    </MudPaper>
                }
            </MudCardContent>
        </MudCard>
    </MudItem>

    <!-- Pie Chart Card -->
    <MudItem xs="12" md="4">
        <MudCard Style="height: 400px;">
            <MudCardHeader>
                <MudText Typo="Typo.h6">Sales By Category</MudText>
            </MudCardHeader>
            <MudCardContent>
                <MudChart ChartType="ChartType.Pie"
                          InputData="@_pieData"
                          InputLabels="@_pieLabels"
                          Width="300px"
                          Height="300px" />
            </MudCardContent>
        </MudCard>
    </MudItem>

    <!-- Bar Chart Card -->
    <MudItem xs="12" md="4">
        <MudCard Style="height: 400px;">
            <MudCardHeader>
                <MudText Typo="Typo.h6">Total Sales</MudText>
            </MudCardHeader>
            <MudCardContent>
                <MudChart ChartType="ChartType.Bar"
                          ChartSeries="@_barChartSeries"
                          XAxisLabels="@_monthLabels"
                          Width="100%"
                          Height="300px"
                          DisableLegend="true"
                          Color="Color.Warning"
                          XAxisLines="true"
                          YAxisLines="true" />
            </MudCardContent>
        </MudCard>
    </MudItem>


</MudGrid>


@code {
    // Pie Chart Data
    private double[] _pieData = new double[] { 30, 25, 20, 15, 10 };
    private string[] _pieLabels = new[] { "Tops", "Bottoms", "Dresses", "Shoes", "Accessories" };

    // Bar Chart Data
    private List<ChartSeries> _barChartSeries = new List<ChartSeries>()
    {
        new ChartSeries()
        {
            Name = "Sales",
            Data = new double[] { 400, 350, 380, 400, 420, 500, 700, 600, 550, 650, 620, 640 }
        }
    };

    private string[] _monthLabels = new[] { "Jan", "Feb", "Mar", "Apr", "May", "Jun", "Jul", "Aug", "Sep", "Oct", "Nov", "Dec" };

    // Custom colors for the chart
    private string[] _chartColors = new[] { "#FF7043" };
}