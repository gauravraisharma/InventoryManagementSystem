@page "/access-denied"
@using MudBlazor
@inject NavigationManager Navigation

<MudContainer MaxWidth="MaxWidth.Small" Class="ma-auto text-center">
    <MudPaper Elevation="4" Class="pa-6">
        <MudText Typo="Typo.h4" Color="Color.Error">Access Denied</MudText>
        <MudText Typo="Typo.body1" Class="mt-4">
            You do not have access to view this page.
        </MudText>
        <MudButton Variant="Variant.Filled" Color="Color.Primary" Class="mt-6" OnClick="NavigateToHome">
            Back to Home
        </MudButton>
    </MudPaper>
</MudContainer>

@code {
    private async Task NavigateToHome()
    {
        Navigation.NavigateTo("/");
    }
}